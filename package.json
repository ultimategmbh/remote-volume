{
	"name": "volume-remote",
	"version": "1.0.0",
	"description": "A small application for controlling the system volume over a WebSocket connection",
	"main": "main.js",
	"type": "module",
	"displayName": "Remote Volume",
	"keywords": [],
	"scripts": {
		"start": "electron .",
		"build": "electron-builder"
	},
	"build": {
		"appId": "com.utsgmbh.volumeremote",
		"files": [
			"**/*",
			"!**/*.yml",
			"!**/*.blockmap"
		],
		"mac": {
			"target": [
				{
					"target": "dmg",
					"arch": [
						"x64",
						"arm64"
					]
				}
			],
			"icon": "icon.png"
		},
		"win": {
			"target": [
				{
					"target": "nsis",
					"arch": [
						"x64"
					]
				}
			],
			"icon": "icon.png"
		},
		"linux": {
			"target": [
				{
					"target": "deb",
					"arch": [
						"x64"
					]
				}
			],
			"icon": "icon.png",
			"category": "AudioVideo"
		}
	},
	"author": "Ultimate Technology Solutions GmbH <info@ultimate-technology.de>",
	"license": "MIT",
	"dependencies": {
		"auto-launch": "^5.0.6",
		"electron-auto-launch": "^5.0.7",
		"electron-store": "^10.0.0",
		"execa": "4.0.3",
		"os": "^0.1.2",
		"ws": "^8.18.0"
	},
	"devDependencies": {
		"electron": "^33.0.2",
		"mocha": "^8.1.1",
		"standard": "^14.3.4"
	}
}
